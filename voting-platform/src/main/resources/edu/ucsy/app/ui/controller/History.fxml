<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="page-root" stylesheets="@css/application.css" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <content>
        <VBox spacing="25" styleClass="page-root">
            <padding>
                <Insets bottom="30" left="60" right="60" top="30" />
            </padding>

            <!-- Header -->
            <VBox spacing="4">
                <Label styleClass="title" text="Voting History" />
                <Label styleClass="subtitle" text="Review results from past elections" />
            </VBox>

            <!-- ================= CARD 1 (COMPLETED) ================= -->
            <VBox spacing="12" styleClass="poll-card">
                <padding>
                    <Insets bottom="18" left="22" right="22" top="18" />
                </padding>

                <!-- Header -->
                <HBox alignment="TOP_LEFT" spacing="15">

                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label styleClass="poll-title" text="University President Election 2026 - Faculty Representative Selection" wrapText="true" />

                        <Label styleClass="poll-meta" text="Ended: 16 Jan 2026  •  Total: 412" />
                    </VBox>

                    <VBox alignment="TOP_RIGHT" spacing="8">
                        <Label styleClass="status-badge" text="COMPLETED" />

                        <Button styleClass="delete-btn" text="Delete" />
                    </VBox>

                </HBox>

                <!-- Options -->
                <VBox spacing="8">
                    <HBox>
                        <Label text="Candidate A" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="210 votes  |  51%" />
                  <styleClass>
                     <String fx:value="option-row" />
                     <String fx:value="winner" />
                  </styleClass>
                    </HBox>

                    <HBox styleClass="option-row">
                        <Label text="Candidate B" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="150 votes  |  36%" />
                    </HBox>

                    <HBox styleClass="option-row">
                        <Label text="Candidate C" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="52 votes  |  13%" />
                    </HBox>
                </VBox>
            </VBox>


            <!-- ================= CARD 2 (ACTIVE - NO DELETE) ================= -->
            <VBox spacing="12" styleClass="poll-card">
                <padding>
                    <Insets bottom="18" left="22" right="22" top="18" />
                </padding>

                <HBox alignment="TOP_LEFT" spacing="15">

                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label styleClass="poll-title" text="Best Programming Language for Backend Development in 2026" wrapText="true" />

                        <Label styleClass="poll-meta" text="Ends: 25 Feb 2026  •  Total: 120" />
                    </VBox>

                    <Label styleClass="status-badge-active" text="ACTIVE" />

                </HBox>

                <VBox spacing="8">
                    <HBox styleClass="option-row">
                        <Label text="Java" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="50 votes  |  42%" />
                    </HBox>

                    <HBox>
                        <Label text="Python" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="55 votes  |  46%" />
                  <styleClass>
                     <String fx:value="option-row" />
                     <String fx:value="winner" />
                  </styleClass>
                    </HBox>

                    <HBox styleClass="option-row">
                        <Label text="Go" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="15 votes  |  12%" />
                    </HBox>
                </VBox>
            </VBox>


            <!-- ================= CARD 3 (CLOSED) ================= -->
            <VBox spacing="12" styleClass="poll-card">
                <padding>
                    <Insets bottom="18" left="22" right="22" top="18" />
                </padding>

                <HBox alignment="TOP_LEFT" spacing="15">

                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label styleClass="poll-title" text="Campus Event Theme Selection" wrapText="true" />

                        <Label styleClass="poll-meta" text="Ended: 10 Feb 2026  •  Total: 276" />
                    </VBox>

                    <VBox alignment="TOP_RIGHT" spacing="8">
                        <Label styleClass="status-badge-closed" text="CLOSED" />

                        <Button styleClass="delete-btn" text="Delete" />
                    </VBox>

                </HBox>

                <VBox spacing="8">
                    <HBox>
                        <Label text="Tech Future" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="120 votes  |  43%" />
                  <styleClass>
                     <String fx:value="option-row" />
                     <String fx:value="winner" />
                  </styleClass>
                    </HBox>

                    <HBox styleClass="option-row">
                        <Label text="Retro Night" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="96 votes  |  35%" />
                    </HBox>

                    <HBox styleClass="option-row">
                        <Label text="Cultural Fusion" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="60 votes  |  22%" />
                    </HBox>
                </VBox>
            </VBox>

        </VBox>
    </content>
</ScrollPane>
