<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="page-root" stylesheets="@css/application.css" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ucsy.app.ui.controller.Home">

    <VBox spacing="30" styleClass="page-root">
        <padding>
            <Insets bottom="40" left="60" right="60" top="40" />
        </padding>



        <VBox alignment="CENTER" spacing="10">
            <Label styleClass="title" text="Welcome to Voting System" />
            <Label styleClass="subtitle" text="Host a new poll or join an existing one instantly" />
        </VBox>

        <HBox spacing="30">
            <VBox prefHeight="323.0" prefWidth="333.0" spacing="20" styleClass="card" HBox.hgrow="ALWAYS">
                <Label styleClass="card-title" text="Create New Poll" />

                <VBox spacing="8">
                    <Label style="-fx-font-weight: bold;" text="Poll Question" />
                    <TextField fx:id="newPollTitle" promptText="What is your favorite programming language?" />
                </VBox>

                <VBox spacing="8">
                    <Label style="-fx-font-weight: bold;" text="Options (Choices)" />
                    <VBox fx:id="choicesContainer" spacing="10">
                        <TextField promptText="Option 1" />
                        <TextField promptText="Option 2" />
                    </VBox>
                    <Button style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-cursor: hand;" text="+ Add Option" />
                </VBox>

                <Button maxWidth="Infinity" onAction="#handleCreatePoll" styleClass="primary-btn" text="Launch Poll" />
            </VBox>

            <VBox prefWidth="350" spacing="20">
                <VBox spacing="15" styleClass="card">
                    <Label styleClass="card-title" text="Join Existing Poll" />
                    <TextField fx:id="pollCodeField" promptText="Enter Server IP (e.g. 255.255.255.255)" />
                    <Button maxWidth="Infinity" onAction="#handleJoinPoll" style="-fx-background-color: #9b59b6;" styleClass="primary-btn" text="Join Now" />
                </VBox>

            </VBox>
        </HBox>
    </VBox>
</ScrollPane>
